{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "paths": {
            "@anu/*": [
                "../packages/anu-vue/*"
            ]
        }
    },
    "exclude": [
        "**/dist/**"
    ],
    "include": [
        "**/*.ts",
        "**/*.d.ts",
        "**/*.vue",
        "**/*.md",
        ".vitepress/shims.d.ts"
    ]
}