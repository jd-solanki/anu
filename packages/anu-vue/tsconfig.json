{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist/types",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./auto-imports.d.ts",
    "./shims.d.ts",
    "./volar.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}