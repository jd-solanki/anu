{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist/types",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "anu-vue": [
        "./src"
      ]
    },
    "types": [
      "vitest/globals",
      "unplugin-vue-define-options/macros-global"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "shims.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
