{
  // Don't format as per recommended config of antfu eslint
  // "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.linkedEditing": true,
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "markdown.extension.completion.root": "../docs/",
  // JS
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // TypeScript
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "editor.autoClosingBrackets": "always"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // JSON
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Vue
  "[vue]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  // Emmet
  "emmet.includeLanguages": {
    "markdown": "html"
  },
  // Extension: ESLint
  "eslint.experimental.useFlatConfig": true,
  // Disable the default formatter, use eslint instead
  "prettier.enable": false,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    // "source.organizeImports": "explicit"

    // Recommended by antfu eslint
    "source.organizeImports": "never"
  },
  // "eslint.rules.customizations": [
  //     {
  //         "rule": "style/*",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "format/*",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-indent",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-spacing",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-spaces",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-order",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-dangle",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*-newline",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*quotes",
  //         "severity": "off"
  //     },
  //     {
  //         "rule": "*semi",
  //         "severity": "off"
  //     }
  // ],
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml"
  ],
  // Extension: Tailwind
  "tailwindCSS.experimental.classRegex": [
    [
      "ui:\\s*{([^)]*)\\s*}",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "/\\*ui\\*/\\s*{([^;]*)}",
      ":\\s*[\"'`]([^\"'`]*).*?[\"'`]"
    ]
  ],
  // Extension: Comment Anchors
  "commentAnchors.tags.displayLineNumber": false,
  "commentAnchors.workspace.enabled": false,
  "commentAnchors.showCursor": true,
  "commentAnchors.tags.displayTagName": false,
  "commentAnchors.tags.anchors": {
    "‚ÑπÔ∏è": {
      "scope": "hidden",
      // This color is taken from "Better Comments" Extension (?)
      "highlightColor": "#3498DB",
      "styleComment": true,
      "isItalic": false
    },
    "üëâ": {
      "scope": "file",
      // This color is taken from "Better Comments" Extension (*)
      "highlightColor": "#98C379",
      "styleComment": true,
      "isItalic": false
    },
    "‚ùó": {
      "scope": "hidden",
      // This color is taken from "Better Comments" Extension (*)
      "highlightColor": "#FF2D00",
      "styleComment": true,
      "isItalic": false
    }
  },
  // Extention: Code Spell Checker
  "cSpell.words": [
    "composables",
    "deepmerge",
    "defu",
    "endregion",
    "globby",
    "nuxt",
    "Vite",
    "vitepress",
    "vnode",
    "Vuetify's",
    "webdriverio"
  ],
  // Extension: UnoCSS
  "unocss.root": "packages/documentation",
  // Extension: Volar
  "vue.server.vitePress.supportMdFile": true,
  "references.preferredLocation": "peek",
  "commentAnchors.tagHighlights.enabled": true
}
